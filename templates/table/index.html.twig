{% extends 'base.html.twig' %}

{% block title %}Hello TableRollController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}</h1>
    <div class="example-wrapper">
        <a>D4 clicked: <span id="D4Count">0</span></a>
        <button id="D4" class="btn btn-primary btn-sm" onclick="incrementNumDice('D4')">D4</button>
        <a>D6 clicked: <span id="D6Count">0</span></a>
        <button id="D6" class="btn btn-primary btn-sm" onclick="incrementNumDice('D6')">D6</button>
        <a>D8 clicked: <span id="D8Count">0</span></a>
        <button id="D8" class="btn btn-primary btn-sm" onclick="incrementNumDice('D8')">D8</button>
        <br>
        <a>D10 clicked: <span id="D10Count">0</span></a>
        <button id="D10" class="btn btn-primary btn-sm" onclick="incrementNumDice('D10')">D10</button>
        <a>D12 clicked: <span id="D12Count">0</span></a>
        <button id="D12" class="btn btn-primary btn-sm" onclick="incrementNumDice('D12')">D12</button>
        <a>D20 clicked: <span id="D20Count">0</span></a>
        <button id="D20" class="btn btn-primary btn-sm" onclick="incrementNumDice('D20')">D20</button>
        <br>
        <a>D100 clicked: <span id="D100Count">0</span></a>
        <button id="D100" class="btn btn-primary btn-sm" onclick="incrementNumDice('D100')">D100</button>
    </div>

    <label for="amountOfDice">Number of Dice:</label>
    <input type="number" id="amountOfDice" name="amountOfDice" value="1" min="1">
    <br>
    <button id="rollButton" class="btn btn-primary btn-sm">
        Roll me! 
    </button>

    <h2 id="ReRollDice">Roll your dice!</h2>
</div>
<script>
    function incrementNumDice(buttonId) {
        var button = document.getElementById(buttonId);
        var count = parseInt(button.getAttribute('data-count')) || 0;
        count++;
        button.setAttribute('data-count', count);
        //console.log(count);
        var spanId = buttonId + 'Count';
       // console.log(spanId);
        var spanElement = document.getElementById(spanId);
        spanElement.innerText = count;
        //console.log(spanElement);
    }

    // check vue for symfony.
    document.getElementById('rollButton').addEventListener('click', function() {
    var amountOfDice = document.getElementById('amountOfDice').value; // Get the number of dice from the input field
    var counts = {};
       var buttons = document.querySelectorAll('.btn');
    buttons.forEach(function(button) {
        var buttonId = button.id;
        var count = parseInt(button.getAttribute('data-count')) || 0;
        counts[buttonId] = count;
    });

    $.ajax({
        url: '{{ path('roll_dice') }}',
        method: 'GET',
        data: { 
            amountOfDice: amountOfDice,
            counts: JSON.stringify(counts) 
                }, // Pass the number of dice as a query parameter
        success: function(response) {
            // Update the content of the <h2> element with the new dice roll
            console.log(response); 
            document.getElementById('ReRollDice').innerText = 'Your roll = ' + response.dice;
        },
        error: function(xhr, status, error) {
            console.error(error);
        }
    });
});

</script>
{% endblock %}
