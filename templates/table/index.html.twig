{% extends 'base.html.twig' %}

{% block title %}Hello TableRollController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}</h1>
       <button id="rollButton" class="btn btn-primary btn-sm">
        Roll me! 
    </button>

    <h2 id="ReRollDice">Your roll = </h2>
</div>
<script>
    document.getElementById('rollButton').addEventListener('click', function() {
    $.ajax({
        url: '{{ path('roll_dice_D4') }}',
        method: 'GET',
        success: function(response) {
            console.log(response);
            document.getElementById('ReRollDice').innerText = response.dice;
        },
        error: function(xhr, status, error) {
            console.error(error);
        }
    });
});

</script>
{% endblock %}
